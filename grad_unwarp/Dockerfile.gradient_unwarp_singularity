    \n        ], \
    \n        "pip_install": [ \
    \n          "numpy", \
    \n          "pydicom", \
    \n          "nose", \
    \n          "sphinx", \
    \n          "nibabel" \
    \n        ], \
    \n        "create_env": "neuro", \
    \n        "activate": true \
    \n      } \
    \n    ], \
    \n    [ \
    \n      "user", \
    \n      "root" \
    \n    ], \
    \n    [ \
