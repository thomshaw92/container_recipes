    \n      "workdir", \
    \n      "/30days" \
    \n    ], \
    \n    [ \
    \n      "workdir", \
    \n      "/QRISdata" \
    \n    ], \
    \n    [ \
    \n      "workdir", \
    \n      "/winmounts" \
    \n    ], \
    \n    [ \
    \n      "workdir", \
    \n      "/afm01" \
    \n    ], \
    \n    [ \
